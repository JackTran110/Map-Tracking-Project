<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragmentBBC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_bbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="title_bbc"
            android:textColor="@android:color/background_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/date_bbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/description_bbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/link_bbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:clickable="true"
            android:text="link"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15dp" />



    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_background"
        android:text="@string/bbc_saved_button"
        />

        <Button
            android:id="@+id/view_list"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_background"
            android:text="@string/bbc_view_button"
           />

    </LinearLayout>
</FrameLayout>